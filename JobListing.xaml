<UserControl x:Class="jtrack.JobListing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:jtrack"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <ComboBox Width="90" Margin="0, 0, 20, 0"/>
        <TextBlock Text="Job Title" Foreground="White" Margin="0, 0, 20, 0" VerticalAlignment="Center"/>
        <TextBlock Text="Employer" Foreground="White" Margin="0, 0, 20, 0" VerticalAlignment="Center"/>
        <TextBlock Text=""/>
        <TextBlock Text=""/>
        <Button Content="Link" Margin="0, 0, 10, 0"/>
        <Button Content="X" Width="20"/>
    </StackPanel>
</UserControl>
