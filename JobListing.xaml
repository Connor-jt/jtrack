<UserControl x:Class="jtrack.JobListing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:jtrack"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <ComboBox x:Name="status_box" Width="90" Margin="0, 0, 20, 0"/>
        <TextBlock x:Name="title_box" Text="Job Title" Width="200" Foreground="White" Margin="0, 0, 20, 0" VerticalAlignment="Center"/>
        <TextBlock x:Name="employer_box" Text="Employer" Width="100" Foreground="White" Margin="0, 0, 20, 0" VerticalAlignment="Center"/>
        <Button x:Name="link_box" Content="Open Link" Margin="0, 0, 10, 0"/>
        <Button x:Name="delete_box" Content="X" Width="20" Foreground="Red"/>
    </StackPanel>
</UserControl>
