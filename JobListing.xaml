<UserControl x:Class="jtrack.JobListing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:jtrack"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="status_box" Grid.Column="0" SelectionChanged="StatusChanged" Margin="0,0,10,0"/>
        <TextBlock x:Name="employer_box" Text="Employer"  Grid.Column="1" Foreground="White" VerticalAlignment="Center"/>
        <TextBlock x:Name="title_box" Text="Job Title"  Grid.Column="2" Foreground="White"  VerticalAlignment="Center"/>
    </Grid>
</UserControl>
