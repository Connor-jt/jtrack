<Window x:Class="jtrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:jtrack"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#101010">
        <StackPanel Orientation="Horizontal" Height="20px" VerticalAlignment="Top" HorizontalAlignment="Center">
            <TextBlock Text="Jobs: 0" Foreground="White" Margin="0, 0, 10, 0"/>
            <TextBlock Text="Pending: 0" Foreground="White" Margin="0, 0, 10, 0"/>
            <TextBlock Text="Unapplied: 0" Foreground="White" Margin="0, 0, 10, 0"/>
            <TextBlock Text="Rejected: 0" Foreground="White"/>
        </StackPanel>
        <Button Content="+" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <ListView Margin="0, 20, 0, 0" Background="Transparent">
            
        </ListView>
    </Grid>
</Window>
